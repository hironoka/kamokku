
%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{ "data-target": "#bs-example-navbar-collapse-1", "data-toggle": "collapse", type: "button" }
      = link_to "Yomibito", root_path, class: "navbar-brand"
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to 'Group page', root_path
        - if user_signed_in?
          %li
            = link_to 'My page', user_path(@user)
          %li
            = link_to '投稿する', new_tweet_path, class: 'btn btn-default'
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          -if user_signed_in?
            %a.dropdown-toggle{ aria: { expanded: 'false' }, data: { toggle: "dropdown" }, href: "#", role: "button" }
              = current_user.email
            %ul.dropdown-menu{ role: 'menu' }
              %li
                = link_to 'Profile', edit_user_path(current_user.id)
              %li
                = link_to 'Logout', destroy_user_session_path, method: :delete
          -else
            .button
              %li
                = link_to 'Sing in', new_user_registration_path
