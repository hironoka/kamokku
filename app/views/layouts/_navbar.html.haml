
%nav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Yomibito", root_path, class: "navbar-brand"
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => "/tweets/show"}
            My page
            %span.sr-only (current)
        %li
          %a{:href => "#"} Group page
        - if user_signed_in?
          %ul.nav.navbar-nav{style: "margin-right: auto;"}
            %li
              %form.navbar-form.navbar-left{:role => "search"}
                .form-group
                  %input.form-control{:placeholder => "Search", :type => "text"}/
                %button.btn.btn-default{:type => "submit"} Submit
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              %a.dropdown-toggle{aria: {expanded: "false"}, data: {toggle: "dropdown"}, href: "#", role: "button"}
                = current_user.email
                %span.caret
              %ul.dropdown-menu{role: "menu"}
                %li
                  = link_to 'My Page', user_path(current_user.id)
                %li
                  = link_to 'Profile Edit', edit_user_path(current_user.id)
                %li
                  = link_to 'Logout', destroy_user_session_path, method: :delete
        - else
          %ul.nav.navbar-nav.navbar-right
            %li
              .btn.btn-default.navbar-btn
                = link_to 'Get Started', new_user_session_path
